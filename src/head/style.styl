.header-con {
  width 100%;
  height 80px;
  box-shadow 0px 0px 5px rgba(0, 0, 0, 0.5);
  position fixed;
  top 0;
  left 0;
  display flex;

  &:hover {
    transition all 0.3s ease-out;
    box-shadow 0px -1px 5px rgba(0, 0, 0, 0.4), 0px 0px 5px rgba(0, 0, 0, 0.5), 0px 2px 10px rgba(0, 0, 0, 0.4);
  }
  .header-nav {
    width 56px;
    height 56px;
    transform rotate(45deg);
    margin-left 15px;
    margin-top 12px;
    color white;
    background-color #FF6E4D;
    cursor hand;
    &:hover{
      transition all 0.5s ease-out;
      transform rotate(405deg);
    }
  }
}