.nav-container {
  display flex;
  flex-wrap wrap;
  padding 20px;
  justify-content space-around;
  margin-top 90px;
  .return-btn {
    position fixed;
    right 10px;
    top 30%;
    height 50px;
    width 50px;
    border-radius 50%;
    background-color rgba(0.95, 0.49, 0.40, 0.6);
    color white;
    font-size 12px;
    cursor hand;
    &:hover {
      transition all 0.3s ease-out;
      background-color rgba(0.95, 0.49, 0.40, 1);
    }
  }
  .nav-in-con {
    width 200px;
    height 200px;
    border-radius 5px;
    margin-bottom 10px;
    background-color #FF6E4D;
    color white;
    cursor hand;
    animation showCon 0.5s ease-out;
    font-weight bold;
    &:hover {
      transition all 0.3s ease-out;
      background-color #FF6347;
    }
    a {
      display flex;
      flex 1;
      height 100%;
    }
    .nav-title {
      width 100px;
      height 100px;
      text-align center;
      line-height 100px;
    }
    .nav-profile {
      padding 5px 0 5px 5px;
      line-height 20px;
    }
  }
}

@media (max-width: 440px), handheld {
  .nav-container {
    flex-direction column;
    .nav-in-con {
      width 100%;
      height 100px;
    }
  }
}

@keyframes showCon {
  from {
    opacity 0;
  }
  to {
    opacity 1;
  }
}


